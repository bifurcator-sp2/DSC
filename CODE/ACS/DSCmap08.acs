script "SatartLastWave" (void){
		Thing_Activate(39);
		ACS_NamedExecuteAlways("SpawnWave", 0, 100513, 100105, 100405);
		delay(35*5);
		ACS_NamedExecuteAlways("Mus_SM1", 0);
		//wait for scull pickup
		while(!NextWaveReady){delay(1);} NextWaveReady = false;

